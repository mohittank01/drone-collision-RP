#!/bin/bash
#SBATCH --nodes=1
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=20
#SBATCH --mem=10000MB
#SBATCH --time=06:00:00
#SBATCH --job-name=drone_montecarlo
#SBATCH --partition=short

export OMP_NUM_THREADS=$SLURM_CPUS_PER_TASK

./Monte_Carlo --airport LHR --depart_arrive 0 --distance 1.0 --total_runs 10
./Monte_Carlo --airport LHR --depart_arrive 1 --distance 1.0 --total_runs 10